rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isSelf(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function myRole() {
      return get(/databases/$(database)/documents/smartlearn_users/$(request.auth.uid)).data.role;
    }

    function isSuperAdmin() {
      return isSignedIn() && request.auth.token.email == "luescher.sascha@gmail.com";
    }

    function isStaff() {
      return isSignedIn() && (myRole() == "teacher" || myRole() == "picts" || myRole() == "super_admin");
    }

    match /smartlearn_users/{userId} {
      allow create: if isSelf(userId) && request.resource.data.role == "student";
      allow read: if isSelf(userId) || isSuperAdmin();
      allow update: if (isSelf(userId) && request.resource.data.role == resource.data.role) || isSuperAdmin();
      allow delete: if isSuperAdmin();
    }

    match /classes/{classId} {
      allow read: if isSignedIn();
      allow create, update, delete: if isStaff() || isSuperAdmin();
    }

    match /enrollments/{enrollmentId} {
      allow read: if isSelf(resource.data.user_uid) || isStaff() || isSuperAdmin();
      allow create, update, delete: if isStaff() || isSuperAdmin();
    }

    match /smartlearn_tasks/{taskId} {
      allow create: if isSignedIn() && (request.resource.data.owner_uid == request.auth.uid || isStaff() || isSuperAdmin());
      allow read, update, delete: if isSignedIn() && (resource.data.owner_uid == request.auth.uid || isStaff() || isSuperAdmin());
    }

    match /task_assignments/{assignmentId} {
      allow create, update, delete: if isStaff() || isSuperAdmin();
      allow read: if isStaff() || isSuperAdmin()
        || (isSignedIn() && resource.data.target_type == "user" && resource.data.target_id == request.auth.uid)
        || (isSignedIn() && resource.data.target_type == "class"
          && exists(/databases/$(database)/documents/enrollments/$(resource.data.target_id + "_" + request.auth.uid)));
    }

    match /submissions/{submissionId} {
      allow create: if isSignedIn() && request.resource.data.student_uid == request.auth.uid;
      allow read, update: if isSignedIn()
        && (resource.data.student_uid == request.auth.uid || isStaff() || isSuperAdmin());
      allow delete: if isStaff() || isSuperAdmin();
    }

    match /ai_feedback_events/{eventId} {
      allow create: if isSignedIn();
      allow read: if isSignedIn() && (resource.data.uid == request.auth.uid || isStaff() || isSuperAdmin());
      allow update, delete: if isStaff() || isSuperAdmin();
    }
  }
}
